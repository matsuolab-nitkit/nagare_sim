<?xml version="1.0"?>
<robot name="thruster">
    <material name="black">
        <color rgba="0.2 0.2 0.2 1"/>
    </material>
    <material name="grey">
        <color rgba="0.75 0.75 0.75 1"/>
    </material>
    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>
    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>
    <link name="base_link">
        <visual>
            <geometry>
                <mesh filename="package://propeller_description/meshes/thruster_body.stl"/>
            </geometry>
            <material name="blue"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </visual>
        <collision>
            <geometry>
                <cylinder length="0.1127" radius="0.05"/>
            </geometry>
            <material name="blue"/>
            <origin xyz="0.01105 0 0" rpy="0 1.5708 0"/>
        </collision>
    </link>

    <link name="propeller">
        <visual>
            <geometry>
                <mesh filename="package://propeller_description/meshes/propeller.stl"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <mesh filename="package://propeller_description/meshes/propeller.stl"/>
            </geometry>
        </collision>
    </link>
    <joint name="propeller_joint" type="continuous">
        <axis xyz="1 0 0"/>
        <parent link="base_link"/>
        <child link="propeller"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>
</robot>
